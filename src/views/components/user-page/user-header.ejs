<div class="user-header-profile">
    <h3><%= pageUser.username %></h3>
    <div class="profile-images">
        <img id="cover-image" src="#">
        <div class="prof-pic-and-options-menu">
            <img id="profile-picture" src="/user/<%= user._id %>/profilePicture">
            <div class="user-interact-menu">
                <% if (pageUser._id.toString() == user._id.toString()) { %>
                    <p><a href="/user/<%= user._id %>/update">Editar Perfil</a></p>
                <% } else { %>
                    <form method="post">
                        <button formaction="/newPrivateChat/<%= pageUser._id %>">Mensagem</button>
                    </form>

                    <% if (pageUser.followers.includes(user._id)) { %>
                        <p>Seguindo</p>
                    <% } else { %>
                        <form method="post">
                            <button formaction="/user/<%= pageUser._id %>/follow">Seguir</button>
                        </form>
                    <% } %>
                <% } %>

            </div>
        </div>
    </div>


    <div class="user-profile-content">
